
@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Department";
}
<a asp-action="Create" class="btn btn-success">Creat new Department</a>
@if(Model.Count()>0)
{
    <h1>All Department</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d=>d.Name)</td>
                <td>@Html.DisplayNameFor(d=>d.Code)</td>
                <td>@Html.DisplayNameFor(d=>d.datetime)</td>
                <td >Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbady class="table table-striped">
            @foreach(var department in  Model)
            {
                <td>@department.Name</td>
                <td>@department.Code</td>
                <td>@department.datetime</td>
                <td><a asp-action="Details" asp-route-id="@department.Id"><i class="fas fa-eye"></i></a></td>
                <td><a asp-action="Update" asp-route-id="@department.Id"><i class="fas fa-edit"></i></a></td>
                <td>Delete</td>
               
            }
            <br />
        </tbady>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>There is no Department</h3>
    </div>
}