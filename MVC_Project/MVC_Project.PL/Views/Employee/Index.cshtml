@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employee";
}

<div class="alert alert-success">
    @ViewData["massage"]

</div>
<div class="alert alert-success">

    @ViewBag.massage2
</div>
<a asp-action="Create" class="btn btn-success">Add new Employee</a>
@if (Model.Count() > 0)
{
    <h1>All Employee</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.Age)</td>
                <td>@Html.DisplayNameFor(d => d.Salary)</td>
                <td>@Html.DisplayNameFor(d => d.Adrress)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.HireTime)</td>
                <td>@Html.DisplayNameFor(d => d.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(d => d.IsActive)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbady class="table table-striped">
            @foreach (var employee in Model)
            {
                <td>@employee.Name</td>
                <td>@employee.Age</td>
                <td>@Html.DisplayFor(e=>employee.Salary)</td>
                <td>@employee.Adrress</td>
                <td>@Html.DisplayFor(e => employee.Email)</td>
                <td>@employee.HireTime</td>
                <td>@employee.PhoneNumber</td>
                <td>@Html.DisplayFor(e => employee.IsActive)</td>
                <td><a asp-action="Details" asp-route-id="@employee.Id"><i class="fas fa-eye"></i></a></td>
                <td><a asp-action="Update" asp-route-id="@employee.Id"><i class="fas fa-edit"></i></a></td>
                <td>Delete</td>

            }
            <br />
        </tbady>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>There is no Employee</h3>
    </div>
}