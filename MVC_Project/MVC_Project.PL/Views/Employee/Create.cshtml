@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create new Employee</h1>
<br />
<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label">Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">Age</label>
        <input class="form-control" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">Adrress</label>
        <input class="form-control" asp-for="Adrress" />
        <span asp-validation-for="Adrress" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">Email</label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">HireTime</label>
        <input class="form-control" asp-for="HireTime" />
        <span asp-validation-for="HireTime" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">CreationDate</label>
        <input class="form-control" asp-for="CreationDate" />
        <span asp-validation-for="CreationDate" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">Salary</label>
        <input class="form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">PhoneNumber</label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger "></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">IsActive</label>
        <input class="form-control" asp-for="IsActive" />
        <span asp-validation-for="IsActive" class="text-danger "></span>
    </div>
    <input type="submit" value="sumbit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">back</a>
</form>
@section ValidationScriptSection{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}