@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details @Model.Id</h1>
<br />
<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label">Name</label>
        <input class="form-control" asp-for="Name" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">Age</label>
        <input class="form-control" asp-for="Age" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">Salary</label>
        <input class="form-control" asp-for="Salary" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">Adrress</label>
        <input class="form-control" asp-for="Adrress" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">Email</label>
        <input class="form-control" asp-for="Email" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">HireTime</label>
        <input class="form-control" asp-for="HireTime" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">PhoneNumber</label>
        <input class="form-control" asp-for="PhoneNumber" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label">IsActive</label>
        <input class="form-control" asp-for="IsActive" readonly />

    </div>
    <br />
    <a asp-action="Update" class="btn btn-success"> Edit</a>
    <a asp-action="Index" class="btn btn-light">back</a>
</form>

